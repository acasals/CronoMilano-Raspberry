#:set SPACING 10
#:set PADDING 10
#:set BORDER_COLOR (0.8, 0.8, 0.8, 1)
#:set BG_LIGHT (0.95, 0.95, 0.95, 1)
#:set BTN_SUCCESS (0.2, 0.7, 0.3, 1)
#:set BTN_DANGER (0.8, 0.2, 0.2, 1)
#:set BTN_SECONDARY (0.5, 0.5, 0.5, 1)

<BtnSuccess@Button>:
    background_normal: ""
    background_color: BTN_SUCCESS
    color: 1,1,1,1
    font_size: 22
    padding: 10,10

<BtnDanger@Button>:
    background_normal: ""
    background_color: BTN_DANGER
    color: 1,1,1,1
    font_size: 16
    padding: 8,8

<BtnSecondary@Button>:
    background_normal: ""
    background_color: BTN_SECONDARY
    color: 1,1,1,1
    font_size: 16
    padding: 8,8

<PanelControl>:
    BoxLayout:
        orientation: "vertical"
        padding: PADDING
        spacing: SPACING
        size_hint: 1, 1

        # PRIMERA FILA
        BoxLayout:
            size_hint_y: None
            height: 50

            # selector modalidad
            BoxLayout:
                size_hint_y: None
                height: 50
                orientation: "horizontal"
                Widget:
                    size_hint_x: 1
                Spinner:
                    id: spinner_modalidad
                    size_hint: None, None
                    font_size: 22
                    background_color: 0.2, 0.6, 0.9, 1
                    size: 200, 40
                Widget:
                    size_hint_x: 1
                    
            BoxLayout:
                size_hint_x: None
                width: 200
                spacing: SPACING

                BtnSecondary:
                    text: "Ajustes"
                    on_release: root.ir_a_ajustes()

                BtnDanger:
                    text: "Apagar"
                    on_release: app.stop()
                    # on_release: root.apagar_sistema()



        # SEGUNDA FILA: campos
        BoxLayout:
            orientation: "horizontal"
            padding: PADDING
            spacing: SPACING
            
            # campos por modalidad
            BoxLayout:
                id: campos_modalidad
                orientation: "vertical"
                size_hint_x: 0.5
                
            # campos comunes
            BoxLayout:
                id: campos_comunes
                orientation: "vertical"
                size_hint_x: 0.5
                

        # TERCERA FILA: bot√≥n START
        BoxLayout:
            size_hint_y: None
            height: 70

            Widget:
                size_hint_x: 1
            BtnSuccess:
                text: "START"
                size_hint_x: None
                width: 200
                on_release: root.crono_start()
            Widget:
                size_hint_x: 1
